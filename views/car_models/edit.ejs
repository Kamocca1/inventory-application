<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Edit Car Model</title>
        <link rel="stylesheet" href="/styles.css" />
    </head>
    <body>
        <%- include("../partials/nav") %>

        <div class="container-narrow">
            <h1>Edit Car Model</h1>
            <div class="form-container">
                <form id="model-form" class="form-grid">
                    <div class="form-group">
                        <label>Series Name</label>
                        <input
                            name="series_name"
                            required
                            value="<%= model?.series_name || '' %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>Model Code</label>
                        <input
                            name="model_code"
                            required
                            value="<%= model?.model_code || '' %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>Body Style</label>
                        <input
                            name="body_style"
                            value="<%= model?.body_style || '' %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>Market</label>
                        <input
                            name="market"
                            value="<%= model?.market || '' %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>Start Year</label>
                        <input
                            name="start_year"
                            type="number"
                            value="<%= model?.start_year ?? '' %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>End Year</label>
                        <input
                            name="end_year"
                            type="number"
                            value="<%= model?.end_year ?? '' %>"
                        />
                    </div>
                    <div class="form-group full-width">
                        <label>Notes</label>
                        <textarea name="notes">
<%= model?.notes || '' %></textarea
                        >
                    </div>
                    <div class="form-group full-width">
                        <div class="nav-actions">
                            <a class="link" href="/car-models">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                Save
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <script>
            const form = document.getElementById("model-form");
            form.addEventListener("submit", async (e) => {
                e.preventDefault();
                const fd = new FormData(form);
                const body = Object.fromEntries(fd.entries());
                ["start_year", "end_year"].forEach((k) => {
                    if (body[k] === "") delete body[k];
                });
                const res = await fetch("/api/car-models/<%= model.id %>", {
                    method: "PUT",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(body),
                });
                if (res.ok) window.location.href = "/car-models";
                else alert("Failed to update car model");
            });
        </script>
    </body>
</html>
