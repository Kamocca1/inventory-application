<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Parts</title>
    <style>
        body {
            font-family: system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, Arial, "Apple Color Emoji", "Segoe UI Emoji";
            margin: 0;
            background: #0b1220;
            color: #e2e8f0;
        }

        .container {
            max-width: 1100px;
            margin: 24px auto;
            padding: 0 16px;
        }

        h1 {
            margin: 12px 0 16px;
            font-size: 28px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 12px;
        }

        th,
        td {
            text-align: left;
            padding: 10px;
            border-bottom: 1px solid #243046;
            font-size: 14px;
        }

        th {
            color: #cbd5e1;
            font-weight: 600;
            background: #111827;
            position: sticky;
            top: 0;
        }

        tr:hover {
            background: #0f172a;
        }

        .muted {
            color: #94a3b8;
        }

        .badge {
            display: inline-block;
            padding: 2px 6px;
            border-radius: 6px;
            background: #1f2937;
            color: #e5e7eb;
            font-size: 12px;
        }
    </style>
</head>

<body>
    <%- include("../partials/nav") %>
        <div class="container">
            <h1>Parts</h1>
            <div style="margin: 8px 0 16px;">
                <a href="/parts/create" class="badge" style="background:#2563eb;">+ New Part</a>
            </div>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>SKU</th>
                        <th>OEM</th>
                        <th>Brand</th>
                        <th>Price</th>
                        <th>Stock</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (Array.isArray(parts) && parts.length) { %>
                        <% parts.forEach(function(part){ %>
                            <tr onclick="window.location='/parts/' + '<%= part.id %>'" style="cursor:pointer;">
                                <td>
                                    <a href="/parts/<%= part.id %>" class="link">
                                        <%= part.name %>
                                    </a>
                                </td>
                                <td class="muted">
                                    <%= part.sku %>
                                </td>
                                <td class="muted">
                                    <%= part.bmw_oem_number || '-' %>
                                </td>
                                <td>
                                    <%= part.brand || '-' %>
                                </td>
                                <td>
                                    <% if (part.price_cents !=null) { %>
                                        <span class="badge">
                                            <%= (part.price_cents/100).toFixed(2) %>
                                                <%= part.currency || 'USD' %>
                                        </span>
                                        <% } else { %>
                                            -
                                            <% } %>
                                </td>
                                <td>
                                    <%= part.stock_quantity %>
                                </td>
                            </tr>
                            <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="6" class="muted">No parts found</td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
</body>

</html>