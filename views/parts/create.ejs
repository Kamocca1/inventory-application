<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Create Part</title>
        <link rel="stylesheet" href="/styles.css" />
    </head>
    <body>
        <%- include("../partials/nav") %>

        <div class="container">
            <h1>Create Part</h1>
            <div class="form-container">
                <form
                    id="part-form"
                    action="/parts"
                    method="post"
                    class="form-grid"
                >
                    <div class="form-group">
                        <label>Name</label>
                        <input name="name" required />
                    </div>
                    <div class="form-group">
                        <label>SKU</label>
                        <input name="sku" required />
                    </div>
                    <div class="form-group">
                        <label>BMW OEM Number</label>
                        <input name="bmw_oem_number" />
                    </div>
                    <div class="form-group">
                        <label>Category ID</label>
                        <input name="category_id" />
                    </div>
                    <div class="form-group">
                        <label>Brand</label>
                        <input name="brand" />
                    </div>
                    <div class="form-group">
                        <label>Supplier</label>
                        <input name="supplier" />
                    </div>
                    <div class="form-group">
                        <label>Price (cents)</label>
                        <input name="price_cents" type="number" min="0" />
                    </div>
                    <div class="form-group">
                        <label>Currency</label>
                        <input name="currency" value="USD" />
                    </div>
                    <div class="form-group">
                        <label>Stock Quantity</label>
                        <input
                            name="stock_quantity"
                            type="number"
                            min="0"
                            value="0"
                        />
                    </div>
                    <div class="form-group">
                        <label>Min Stock Level</label>
                        <input
                            name="min_stock_level"
                            type="number"
                            min="0"
                            value="0"
                        />
                    </div>
                    <div class="form-group">
                        <label>Location</label>
                        <input name="location" />
                    </div>
                    <div class="form-group">
                        <label>Weight (kg)</label>
                        <input
                            name="weight_kg"
                            type="number"
                            step="0.001"
                            min="0"
                        />
                    </div>
                    <div class="form-group full-width">
                        <label>Dimensions (JSON)</label>
                        <textarea
                            name="dimensions_mm"
                            placeholder='{"length":0,"width":0,"height":0}'
                        ></textarea>
                    </div>
                    <div class="form-group full-width">
                        <label>Metadata (JSON)</label>
                        <textarea
                            name="metadata"
                            placeholder='{"notes":""}'
                        ></textarea>
                    </div>
                    <div class="form-group full-width">
                        <label>Description</label>
                        <textarea name="description"></textarea>
                    </div>
                    <div class="form-group full-width">
                        <div class="nav-actions">
                            <a class="link" href="/parts">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                Create
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

