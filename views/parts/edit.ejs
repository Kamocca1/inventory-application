<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Edit Part</title>
        <link rel="stylesheet" href="/styles.css" />
    </head>
    <body>
        <%- include("../partials/nav") %>

        <div class="container">
            <h1>Edit Part</h1>
            <div class="form-container">
                <form id="part-form" class="form-grid">
                    <div class="form-group">
                        <label>Name</label>
                        <input
                            name="name"
                            required
                            value="<%= part?.name || '' %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>SKU</label>
                        <input
                            name="sku"
                            required
                            value="<%= part?.sku || '' %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>BMW OEM Number</label>
                        <input
                            name="bmw_oem_number"
                            value="<%= part?.bmw_oem_number || '' %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>Category ID</label>
                        <input
                            name="category_id"
                            value="<%= part?.category_id || '' %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>Brand</label>
                        <input name="brand" value="<%= part?.brand || '' %>" />
                    </div>
                    <div class="form-group">
                        <label>Supplier</label>
                        <input
                            name="supplier"
                            value="<%= part?.supplier || '' %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>Price (cents)</label>
                        <input
                            name="price_cents"
                            type="number"
                            min="0"
                            value="<%= part?.price_cents ?? '' %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>Currency</label>
                        <input
                            name="currency"
                            value="<%= part?.currency || 'USD' %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>Stock Quantity</label>
                        <input
                            name="stock_quantity"
                            type="number"
                            min="0"
                            value="<%= part?.stock_quantity ?? 0 %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>Min Stock Level</label>
                        <input
                            name="min_stock_level"
                            type="number"
                            min="0"
                            value="<%= part?.min_stock_level ?? 0 %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>Location</label>
                        <input
                            name="location"
                            value="<%= part?.location || '' %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>Weight (kg)</label>
                        <input
                            name="weight_kg"
                            type="number"
                            step="0.001"
                            min="0"
                            value="<%= part?.weight_kg ?? '' %>"
                        />
                    </div>
                    <div class="form-group full-width">
                        <label>Dimensions (JSON)</label>
                        <textarea name="dimensions_mm">
<%= part?.dimensions_mm ? JSON.stringify(part.dimensions_mm) : '' %></textarea
                        >
                    </div>
                    <div class="form-group full-width">
                        <label>Metadata (JSON)</label>
                        <textarea name="metadata">
<%= part?.metadata ? JSON.stringify(part.metadata) : '' %></textarea
                        >
                    </div>
                    <div class="form-group full-width">
                        <label>Description</label>
                        <textarea name="description">
<%= part?.description || '' %></textarea
                        >
                    </div>
                    <div class="form-group full-width">
                        <div class="nav-actions">
                            <a class="link" href="/parts">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                Save
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <script>
            const form = document.getElementById("part-form");
            form.addEventListener("submit", async (e) => {
                e.preventDefault();
                const fd = new FormData(form);
                const body = Object.fromEntries(fd.entries());
                if (body.dimensions_mm) {
                    try {
                        body.dimensions_mm = JSON.parse(body.dimensions_mm);
                    } catch {}
                }
                if (body.metadata) {
                    try {
                        body.metadata = JSON.parse(body.metadata);
                    } catch {}
                }
                [
                    "price_cents",
                    "stock_quantity",
                    "min_stock_level",
                    "weight_kg",
                ].forEach((k) => {
                    if (body[k] === "") delete body[k];
                });
                const res = await fetch("/parts/<%= part.id %>", {
                    method: "PUT",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(body),
                });
                if (res.ok) window.location.href = "/parts/<%= part.id %>";
                else alert("Failed to update part");
            });
        </script>
    </body>
</html>
