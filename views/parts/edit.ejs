<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Edit Part</title>
        <style>
            body {
                font-family: system-ui, -apple-system, Segoe UI, Roboto, Ubuntu,
                    Cantarell, Noto Sans, Arial, "Apple Color Emoji",
                    "Segoe UI Emoji";
                margin: 0;
                background: #0b1220;
                color: #e2e8f0;
            }

            .container {
                max-width: 900px;
                margin: 24px auto;
                padding: 0 16px;
            }

            h1 {
                margin: 12px 0 16px;
                font-size: 28px;
            }

            form {
                display: grid;
                grid-template-columns: 1fr 1fr;
                gap: 12px 16px;
                background: #0f172a;
                border: 1px solid #243046;
                border-radius: 8px;
                padding: 16px;
            }

            label {
                display: block;
                font-size: 13px;
                color: #cbd5e1;
                margin-bottom: 6px;
            }

            input,
            textarea,
            select {
                width: 100%;
                padding: 10px;
                border-radius: 6px;
                border: 1px solid #243046;
                background: #0b1220;
                color: #e2e8f0;
            }

            textarea {
                min-height: 90px;
            }

            .full {
                grid-column: span 2;
            }

            .actions {
                grid-column: span 2;
                display: flex;
                gap: 10px;
                justify-content: flex-end;
            }

            button {
                background: #2563eb;
                color: white;
                border: none;
                padding: 10px 14px;
                border-radius: 6px;
                cursor: pointer;
            }

            a.link {
                color: #93c5fd;
                text-decoration: none;
            }
        </style>
    </head>

    <body>
        <%- include("../partials/nav") %>
        <div class="container">
            <h1>Edit Part</h1>
            <form id="part-form">
                <div>
                    <label>Name</label>
                    <input
                        name="name"
                        required
                        value="<%= part?.name || '' %>"
                    />
                </div>
                <div>
                    <label>SKU</label>
                    <input name="sku" required value="<%= part?.sku || '' %>" />
                </div>
                <div>
                    <label>BMW OEM Number</label>
                    <input
                        name="bmw_oem_number"
                        value="<%= part?.bmw_oem_number || '' %>"
                    />
                </div>
                <div>
                    <label>Category ID</label>
                    <input
                        name="category_id"
                        value="<%= part?.category_id || '' %>"
                    />
                </div>
                <div>
                    <label>Brand</label>
                    <input name="brand" value="<%= part?.brand || '' %>" />
                </div>
                <div>
                    <label>Supplier</label>
                    <input
                        name="supplier"
                        value="<%= part?.supplier || '' %>"
                    />
                </div>
                <div>
                    <label>Price (cents)</label>
                    <input
                        name="price_cents"
                        type="number"
                        min="0"
                        value="<%= part?.price_cents ?? '' %>"
                    />
                </div>
                <div>
                    <label>Currency</label>
                    <input
                        name="currency"
                        value="<%= part?.currency || 'USD' %>"
                    />
                </div>
                <div>
                    <label>Stock Quantity</label>
                    <input
                        name="stock_quantity"
                        type="number"
                        min="0"
                        value="<%= part?.stock_quantity ?? 0 %>"
                    />
                </div>
                <div>
                    <label>Min Stock Level</label>
                    <input
                        name="min_stock_level"
                        type="number"
                        min="0"
                        value="<%= part?.min_stock_level ?? 0 %>"
                    />
                </div>
                <div>
                    <label>Location</label>
                    <input
                        name="location"
                        value="<%= part?.location || '' %>"
                    />
                </div>
                <div>
                    <label>Weight (kg)</label>
                    <input
                        name="weight_kg"
                        type="number"
                        step="0.001"
                        min="0"
                        value="<%= part?.weight_kg ?? '' %>"
                    />
                </div>
                <div class="full">
                    <label>Dimensions (JSON)</label>
                    <textarea name="dimensions_mm">
<%= part?.dimensions_mm ? JSON.stringify(part.dimensions_mm) : '' %></textarea
                    >
                </div>
                <div class="full">
                    <label>Metadata (JSON)</label>
                    <textarea name="metadata">
<%= part?.metadata ? JSON.stringify(part.metadata) : '' %></textarea
                    >
                </div>
                <div class="full">
                    <label>Description</label>
                    <textarea name="description">
<%= part?.description || '' %></textarea
                    >
                </div>
                <div class="actions">
                    <a class="link" href="/parts">Cancel</a>
                    <button type="submit">Save</button>
                </div>
            </form>
        </div>

        <script>
            const form = document.getElementById("part-form");
            form.addEventListener("submit", async (e) => {
                e.preventDefault();
                const fd = new FormData(form);
                const body = Object.fromEntries(fd.entries());
                if (body.dimensions_mm) {
                    try {
                        body.dimensions_mm = JSON.parse(body.dimensions_mm);
                    } catch {}
                }
                if (body.metadata) {
                    try {
                        body.metadata = JSON.parse(body.metadata);
                    } catch {}
                }
                [
                    "price_cents",
                    "stock_quantity",
                    "min_stock_level",
                    "weight_kg",
                ].forEach((k) => {
                    if (body[k] === "") delete body[k];
                });
                const res = await fetch("/parts/<%= part.id %>", {
                    method: "PUT",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(body),
                });
                if (res.ok) window.location.href = "/parts/<%= part.id %>";
                else alert("Failed to update part");
            });
        </script>
    </body>
</html>
