<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Edit Car Trim</title>
        <link rel="stylesheet" href="/styles.css" />
    </head>
    <body>
        <%- include("../partials/nav") %>

        <div class="container">
            <h1>Edit Car Trim</h1>
            <div class="form-container">
                <form id="trim-form" class="form-grid">
                    <div class="form-group">
                        <label>Car Model ID</label>
                        <input
                            name="car_model_id"
                            required
                            value="<%= trim?.car_model_id || '' %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>Trim Name</label>
                        <input
                            name="trim_name"
                            required
                            value="<%= trim?.trim_name || '' %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>Engine Code</label>
                        <input
                            name="engine_code"
                            value="<%= trim?.engine_code || '' %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>Fuel Type</label>
                        <input
                            name="fuel_type"
                            value="<%= trim?.fuel_type || '' %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>Transmission</label>
                        <input
                            name="transmission"
                            value="<%= trim?.transmission || '' %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>Drive Type</label>
                        <input
                            name="drive_type"
                            value="<%= trim?.drive_type || '' %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>Displacement (cc)</label>
                        <input
                            name="displacement_cc"
                            type="number"
                            min="0"
                            value="<%= trim?.displacement_cc ?? '' %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>Horsepower (PS)</label>
                        <input
                            name="horsepower_ps"
                            type="number"
                            min="0"
                            value="<%= trim?.horsepower_ps ?? '' %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>Torque (Nm)</label>
                        <input
                            name="torque_nm"
                            type="number"
                            min="0"
                            value="<%= trim?.torque_nm ?? '' %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>Start Year</label>
                        <input
                            name="start_year"
                            type="number"
                            value="<%= trim?.start_year ?? '' %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>End Year</label>
                        <input
                            name="end_year"
                            type="number"
                            value="<%= trim?.end_year ?? '' %>"
                        />
                    </div>
                    <div class="form-group">
                        <label>Market</label>
                        <input
                            name="market"
                            value="<%= trim?.market || '' %>"
                        />
                    </div>
                    <div class="form-group full-width">
                        <label>Notes</label>
                        <textarea name="notes">
<%= trim?.notes || '' %></textarea
                        >
                    </div>
                    <div class="form-group full-width">
                        <div class="nav-actions">
                            <a class="link" href="/car-trims">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                Save
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <script>
            const form = document.getElementById("trim-form");
            form.addEventListener("submit", async (e) => {
                e.preventDefault();
                const fd = new FormData(form);
                const body = Object.fromEntries(fd.entries());
                [
                    "displacement_cc",
                    "horsepower_ps",
                    "torque_nm",
                    "start_year",
                    "end_year",
                ].forEach((k) => {
                    if (body[k] === "") delete body[k];
                });
                const res = await fetch("/api/car-trims/<%= trim.id %>", {
                    method: "PUT",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(body),
                });
                if (res.ok) window.location.href = "/car-trims";
                else alert("Failed to update car trim");
            });
        </script>
    </body>
</html>
